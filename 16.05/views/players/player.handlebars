<div class="edit-player-wrapper">

	<label>
		Name: 
		<input id="edit-player-name" type="text" name="name" value="{{player.name}}">
	</label>
	<br>
	<label>
		Email: 
		<input id="edit-player-email" type="email" name="email" value="{{player.email}}">
	</label>
	<br>
	<span>Points: {{player.points}}</span>
</div>

<button data-id="{{player.id}}" id="edit-player">Edit Player</button>